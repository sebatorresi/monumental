footer.mod
  background lightness($black, 12%)
  color lightness($black, 70%)
  height auto
  margin-top 5rem
  width 100%

.mod__footer
  display grid
  font-size 1em
  grid-auto-columns 1fr
  grid-column-gap 1rem
  grid-row-gap 1rem
  letter-spacing .05em
  line-height 1.3
  margin-top 2.5rem
  padding 1rem 0

  @media (min-width: $bp-xl)
    font-size 1.25em
    grid-auto-flow dense
    grid-column-gap 2.5rem
    grid-row-gap 3.5rem
    grid-template-columns 1fr 1fr 1fr auto auto
    grid-template-rows auto auto auto
    // margin-top 5rem
    padding 1.5rem 0 2.5rem

  p
    color lightness($black, 85%)
    font-size 1em

  h4
    color $monumental
    font-size 1.33em
    font-weight 700
    margin 0 0 1rem

  a
    color lightness($black, 85%)
    transition .3s ease

    &:hover
      color $monumental
      opacity .8

.footer__list--programas, .footer__list--info, .footer__list--apps
  @media (min-width: $bp-xl)
    grid-row 1

.footer__list--programas
  grid-column 1 / 3

  li
    margin-bottom .5rem

  @media (min-width: $bp-xl)
    grid-column 1

.footer__list--info
  grid-column 3 / 5

  li
    margin-bottom .5rem

  @media (min-width: $bp-xl)
    grid-column 2

.footer__list--apps
  grid-column 1 / 5
  margin-top 1.5rem
  text-align center

  @media (min-width: $bp-xl)
    grid-column 3
    margin-top 0
    text-align inherit

  ul
    align-content center
    display flex
    justify-content center

    @media (min-width: $bp-xl)
      justify-content flex-start

    li
      margin-right 1.5rem

      &:last-child
        margin-right 0

  svg
    width 32px

.footer__list--social, .footer__list--copy
  grid-column 1 / 5

.footer__list--social
  text-align center

  @media (min-width: $bp-xl)
    grid-row 2

  ul
    align-content center
    display flex
    justify-content center

    li
      margin-right 1.5rem

      &:last-child
        margin-right 0

    svg
      width 32px

.footer__list--copy
  display flex
  flex-flow row wrap
  margin-top 1.5rem
  text-align center

  .copyright
    flex 2 0 100%
    margin-bottom 1.5rem

    @media (min-width: $bp-xl)
      margin-bottom 2.5rem

  .legal, .cookies
    flex 1 0 50%

  .legal
    text-align left

  .cookies
    text-align right

  li
    margin-bottom .5rem

  @media (min-width: $bp-xl)
    grid-row 3
    margin-top 0


.footer__newsletter
  h4
    color $monumental
    font-size 1.33em
    font-weight 700
    margin 0 0 1rem