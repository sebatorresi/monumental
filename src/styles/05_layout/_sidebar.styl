.mod__detail
  .mod__side
    h2
      font-size 1.6em
      line-height 1.3
      margin 0

    h3
      align-content center
      display flex
      font-size 2em
      justify-content flex-start
      margin-top 1.5rem

      @media (min-width: $bp-xl)
        font-size 2.65em

      &:before
        background $monumental
        content ''
        display inline-block
        height 15px
        margin-right .7rem
        width 3px

        @media (min-width: $bp-xl)
          height 25px

    .media__list
      display grid
      grid-row-gap 1rem
      margin-bottom 1.5rem

    .media__list--item
      border-bottom 1px solid lightness($black, 90%)
      font-size .8em
      grid-column-gap 1rem
      grid-template-columns 3rem 2fr
      padding-bottom 1rem

      @media (min-width: $bp-xl)
        grid-template-columns 5rem 2fr
        font-size inherit

      .media__img
        border-radius 50%
        height 3rem
        width 3rem

        @media (min-width: $bp-xl)
          height 5rem
          width 5rem

        img
          height 3rem
          object-fit cover

          @media (min-width: $bp-xl)
            height 5rem
