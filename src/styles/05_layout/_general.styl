::selection
  background $selection

*, *:before, *:after
  box-sizing border-box

// LANDING DE ULTIMO MOMENTO
.vid
  background lightness($monumental, 94%)
  // margin-top: 3rem
  padding 1.5rem 0

.video__container
  // align-content: center
  display block
  height 100%
  // margin-top: 1.5rem
  // justify-content: center
  overflow hidden
  width 100%

  // @media (min-width: $bp-xl)
  // margin-top: 3rem
  video
    display block
    height auto !important
    // max-height: 100%
    padding-bottom 1.5rem
    width 100%

// FIN DEL LANDING DE ULTIMO MOMENTO
.publicidad
  margin 0

  .video__container
    margin 0

.error--404
  align-items center
  display flex
  flex-flow column wrap
  justify-content center
  padding-top 8rem

  @media (min-width: $bp-xl)
    padding-top 0

  h1
    color $monumental
    font-size 14em
    margin 0

    @media (min-width: $bp-xl)
      font-size 30em

  p
    font-size 1.5em
    text-align center

    @media (min-width: $bp-xl)
      font-size 2em

    a
      border-bottom 1px solid lightness($monumental, 80%)
      color $monumental

img
  border 0

p
  color rgba($black, .65)
  font-size 1.35em
  line-height 1.6

  @media (min-width: $bp-xl)
    font-size 1.5em
    line-height 1.75

.header__container, .mod__container
  padding 0 1rem
  width 100%

  @media (min-width: $bp-xl)
    margin 0 auto
    max-width 80rem
    width 80%

  h1
    margin-top 1rem

  h2
    font-size 1.6em
    line-height 1.3
    margin-top 1rem

  h3
    align-content center
    display flex
    font-size 2.65em
    justify-content flex-start

    &:before
      background $monumental
      content ''
      display inline-block
      height 25px
      margin-right .7rem
      width 3px

.media__list
  list-style none
  margin 0
  padding 0

.media__list--item
  display grid
  overflow hidden
  position relative

  .media__overlay--link
    background transparent
    bottom 0
    left 0
    overflow hidden
    position absolute
    right 0
    text-indent 200%
    top 0
    visibility visible
    white-space nowrap
    z-index 1

  .media__overlay--link:hover + * img
    filter brightness(110%)

  // .media__overlay--link:hover ~ * h1
  // opacity: .9
  .media__overlay--link:hover ~ * .media__hero .media__title
    color $white
    opacity .9

  .media__overlay--link:hover ~ * .media__title, .media__title:hover
    color $monumental
    opacity .9

  .media__overlay--link:hover ~ * p
    opacity .8

.media__overlay
  position relative

.media__img
  overflow hidden
  width 100%

  img
    backface-visibility hidden
    display block
    height 100%
    object-fit cover
    object-position center 0
    transition .35s ease
    width 100%

  .media__icon
    position absolute
    right 1rem
    top 1rem

    img
      width 32px

    #icon-audio
      width 32px

      #altavoz
        fill $black !important
        stroke $white

.media__img--responsive
  box-shadow inset 0 0 80px rgba(0, 0, 0, .4)
  overflow hidden

.media__content
  // align-content: start
  display grid

  // justify-content: start
  p
    transition 1.35s ease

  .media__tag, .post-categories
    align-items center
    align-self end
    color lightness($monumental, 70%)
    display flex
    font-family 'montserrat', sans-serif
    font-size .85em
    justify-self end
    letter-spacing .05em
    position relative
    text-transform uppercase
    transition .3s ease
    z-index 2

    &:hover
      opacity .7

    a
      color lightness($monumental, 70%)
      font-family 'montserrat', sans-serif

      // font-size: .85em
      &:hover
        opacity .7

// .mod__highlight--home,
// .mod__podcast, .mod__detail, .mod__news
// padding-top 8rem

// @media (min-width: $bp-xl)
// padding-top 0
.mod__highlight
  .media__list--item-1, .media__list--item-2
    .media__img
      height 15rem

      @media (min-width: $bp-xl)
        height 25rem

    .media__img--responsive
      height 15rem

      @media (min-width: $bp-xl)
        height 25rem

  .media__list--item-3, .media__list--item-4, .media__list--item-5, .media__list--item-6
    .media__img
      height 12rem

    .media__img--responsive
      height 12rem

.mod__detail
  display grid
  grid-auto-columns 1fr
  grid-row-gap 1.5rem
  grid-template-rows auto

  @media (min-width: $bp-xl)
    grid-auto-flow dense
    grid-column-gap 2.5rem
    grid-row-gap 2.5rem
    grid-template-columns 2fr 1fr

.mod__content.podcast, .mod__content.news
  .mod__social
    border 1px solid lightness($black, 90%)
    border-width 1px 0
    margin 1.5rem 0 .5rem
    padding .5rem 0
    text-align center

    @media (min-width: $bp-xl)
      margin 2.5rem 0

    h2
      border 0
      font-size 1.3em
      margin 0 0 1rem
      padding 0

    ul
      align-content center
      display flex
      flex-flow row wrap
      height 38px
      justify-content center

      li
        margin 0
        overflow hidden
        padding-right .5rem
        text-indent 200%

        &:last-child
          padding 0

        a
          border 0
          transition .3s ease

          &:hover
            color $monumental
            opacity .8

      .facebook
        a
          background url('../svg/icon-facebook-black.svg') no-repeat 0 0
          display block
          height 38px
          width 38px

      .twitter
        a
          background url('../svg/icon-twitter-black.svg') no-repeat 0 0
          display block
          height 38px
          width 38px

.camp--wide
  align-items center
  display flex
  height 6em
  justify-content center
  margin-top 4rem
  width 100%

  @media (min-width: $bp-xl)
    height 15rem

  img
    height 6rem
    object-fit cover

    @media (min-width: $bp-xl)
      height 15rem

.mod__archivo
  align-items center
  display flex
  height 330px
  justify-content center
  overflow hidden
  width 1000px

  .monu__archivo
    align-items center
    display flex
    flex-flow column wrap
    justify-content center
    text-align center
    width 300px

    p
      color $monumental
      font-family 'montserrat', sans-serif
      font-weight bold
      text-transform uppercase

    div
      background url('../svg/logo-monumental.svg') no-repeat center
      height 100px
      text-indent -9999%
      width 150px

  .media__archivos
    width 700px

    li
      background url('../svg/icon-audio.svg') no-repeat .5rem center
      background-size 30px 30px
      border 1px solid lightness($black, 85%)
      display flex
      flex-flow column wrap
      height 50px
      justify-content center
      margin 0 0 .5rem
      padding-left 3rem

      p
        font-size 1em
        margin 0
        padding 0

      a
        margin 0
        padding 0

      h1
        color $monumental
        font-size 1.5em
        margin 0
        padding 0

#el__empujador
  margin-top 20vh

  @media (min-width: $bp-xl)
    margin-top 40vh