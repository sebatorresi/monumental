.mod__content

  .media__list
    display: grid

    @media (min-width: $bp-xl)
      grid-column-gap: 2.5rem
      grid-row-gap: 2.5rem
      grid-template-columns: repeat(2, 1fr)

    .media__list--item
      display: grid
      height: 15rem

      @media (min-width: $bp-xl)
        grid-template-columns: repeat(2, 1fr)

      .media__img
        border: 1px solid lightness($black, 90%)

      .media__content
        align-content: flex-start
        display: flex
        flex-flow: column wrap
        padding-left: 1.5rem

        h1
          font-size: 2.5em
          margin: 0 0 .5rem

        li
          background: url(/svg/icon-play-podcast.svg) no-repeat 0 center
          background-size: 20px
          display: block
          font-size: 1.6em
          padding: .6rem 0 .6rem 1.7rem

          a
            color: $black
            transition: .3s ease

            &:hover
              opacity: .6
