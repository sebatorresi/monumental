.contactos
  form
    display: flex
    flex-flow: row wrap
    overflow: hidden

    &> div
      display: inline-block
      width: 100%

      &> label
        color: lightness($black, 60%)
        cursor: pointer
        display: block
        font-size: 1.3em
        letter-spacing: .05em
        padding: 1rem 0
        text-transform: uppercase
        vertical-align: top

        &> input
        &> textarea
          background: transparent
          border: 1px solid lightness($black, 85%)
          display: inline-block
          font-family: 'roboto', sans-serif
          font-size: 1em
          height: 1.8rem
          line-height: 27px
          margin: 5px 0 0
          opacity: .7
          outline: 0
          padding: 1rem 1rem 1rem .5rem
          position: relative
          transition: opacity .3s, border-bottom .3s
          width: 100%

          &:focus
            border-bottom: 1px solid $monumental
            opacity: 1

          &> select
              background: transparent
              border: 0
              display: block
              font-size: 14px
              margin: 16px 0 6px
              opacity: .3
              outline: 0
              padding: 0
              width: 100%

              &:focus
                border-bottom: 1px solid $monumental
                opacity: 1

        .mensaje
          height: 10rem
          padding-top: .2rem

    button,
    .wpcf7-submit
      background: $monumental
      border: 0
      color: $white
      cursor: pointer
      font-size: .8em
      height: 2rem
      letter-spacing: .05em
      outline: 0
      text-transform: uppercase
      width: auto

    .wpcf7-response-output
      border: 0

  h1,
  h2
    margin-top: 0
