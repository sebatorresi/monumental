.navigation
  align-items center
  display grid
  font-size 1.1em
  grid-template-columns 1fr auto 1fr
  height auto
  letter-spacing .035em
  text-transform uppercase

  @media (min-width: $bp-xl)
    display -ms-grid
    padding .5rem 0
    -ms-grid-columns 1fr auto 1fr

  .handle
    cursor pointer
    font-weight 700
    grid-column 3 / 4
    grid-row 1 / 2
    text-align right
    font-size 1em

    @media (min-width: $bp-xl)
      display none

  ul
    align-content top
    display flex
    flex-flow column wrap
    grid-column 1 / 4
    grid-row 2 / 3
    height 0
    justify-content flex-start
    max-height auto
    opacity 0
    overflow hidden
    position relative
    text-align right
    transition height .3s cubic-bezier(.165, .84, .44, 1)

    &.toggle
      height 100%
      max-height auto
      opacity 1
      padding-top 1rem

    @media (min-width: $bp-xl)
      flex-flow row wrap
      grid-column auto
      grid-row auto
      height auto
      opacity 1
      text-align inherit
      -ms-grid-column 2
      -ms-grid-column-span auto /* remember the gutter is a column track! */
      -ms-grid-row 1

    li
      display inline-block
      margin-bottom 1rem
      width 100%

      @media (min-width: $bp-xl)
        display inherit
        margin 0 2rem 0 0
        width inherit

        &:last-child
          margin-right 0

      a
        color $black
        font-family 'montserrat', sans-serif
        font-weight 400
        letter-spacing .04em
        padding-bottom .5rem
        position relative
        transition all ease .2s
        width 100%

        // &:after
        // bottom: -.25em
        // content: ''
        // height: 1px
        // left: 50%
        // position: absolute
        // right: 50%
        // transition: all ease .2s
        &:hover
          opacity .75

      &.nav__current, &.current-menu-item
        a
          color $monumental
          opacity 1

  .date
    display none

    @media (min-width: $bp-xl)
      display inherit
      font-size .85em
      justify-self start
      -ms-grid-column 1
      -ms-grid-column-span 1 /* remember the gutter is a column track! */
      -ms-grid-row 1

  .search
    grid-column 1 / 3
    grid-row 1 / 2

    @media (min-width: $bp-xl)
      grid-column auto
      grid-row auto
      justify-self end
      order inherit
      -ms-grid-column 3
      -ms-grid-column-align end
      -ms-grid-column-span 3 /* remember the gutter is a column track! */
      -ms-grid-row 1

    input
      outline 0

    input[type=search]
      -webkit-appearance textfield

    -webkit-box-sizing content-box

    input::-webkit-search-decoration, input::-webkit-search-cancel-button
      display none

    input[type=search]
      background $white url('../svg/icon-search.svg') no-repeat right center
      border 0
      color transparent
      cursor pointer
      font-size 1.2em
      padding .2rem
      transition all .5s
      width 16px

    input[type=search]:focus
      color $black
      cursor auto
      width auto

    input:placeholder
      color transparent
      letter-spacing .035em

#global-nav
  background $white
  height auto
  position fixed
  top 0
  transition height .2s, line-height .2s
  width 100%
  z-index 9999

.scrolled-nav
  box-shadow 0 0 .5em rgba(0, 0, 0, .1), 0 0 .6rem rgba(0, 0, 0, .1) !important
  height auto !important
  line-height auto !important

  .navigation
    padding 1rem 0 .5rem

  .top
    margin 0
    padding .7rem 0

    .player
      grid-template-columns auto 36px

      .player__info
        grid-column 1 / 2
        padding-right .5rem

        li
          margin 0
          padding 0

        .player__horario, .player__onair
          height 0
          opacity 0

        .player__programa
          font-size 1em
          text-align right

      .player__imagen
        height 0
        opacity 0

      .player__buttons
        img
          width 100%

    .logo
      img
        transition width .3s ease-in-out

        @media (min-width: $bp-xl)
          width 5rem

.site-title
  display inline-block
  transition all .5s

.scrolled-nav .site-title
  font-size 16px

.nav-list
  list-style none

.nav-list li
  display inline-block
  list-style none
  padding-left 20px

.hero-section, .content-section
  height 500px
  padding 100px

.hero-text, .content-text
  max-width 550px

.hero-section h1
  color #333

.hero-section p
  color #333

.content-section
  background aqua

.counter
  background black
  color #fff
  height 20px
  position fixed
  right 0
  top 120px
  width 20px

footer
  background #333
  color #fff
  height 200px
  padding-top 40px
